{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Datalog",
  "scopeName": "source.datalog",
  "patterns": [
    { "include": "#comments" },
    { "include": "#targets" },
    { "include": "#builtins" },
    { "include": "#toolnames" },
    { "include": "#strings" },
    { "include": "#predicates" },
    { "include": "#variables" },
    { "include": "#operators" }
  ],
  "repository": {
    "comments": {
      "patterns": [{ "name": "comment.line.number-sign", "match": "#.*$" }]
    },
    "builtins": {
      "patterns": [{
        "name": "keyword.control.directive.datalog",
        "match": "\\b(min|max|prefix|suffix|resolve|sources|deps|license|attr|target|kind|system_tool)\\b"
      }]
    },
    "toolnames": {
      "patterns": [{
        "name": "constant.other.symbol.datalog",
        "match": "@[a-zA-Z0-9_-]+"
      }]
    },
    "targets": {
      "patterns": [
        {
          "name": "string.regexp.datalog",
          "match": "\"?//[a-zA-Z0-9._/-]*(:[a-zA-Z0-9._-]+)?(//[a-zA-Z0-9._/-]+(:[a-zA-Z0-9._-]+)?)?\"?"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.datalog",
      "begin": "\"",
      "end": "\"",
      "patterns": [{ "name": "constant.character.escape.datalog", "match": "\\\\." }]
    },
    "predicates": {
      "patterns": [{
        "name": "entity.name.function.datalog",
        "match": "\\b[a-z][a-zA-Z0-9_]*\\b(?=\\s*\\()"
      }]
    },
    "variables": {
      "patterns": [{
        "name": "variable.other.readwrite.datalog",
        "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
      }]
    },
    "operators": {
      "patterns": [{
        "name": "keyword.operator.logical.datalog",
        "match": ":-|\\.|,|NOT|not|lt|gt|eq|ne|=|!="
      }]
    }
  }
}